{
	"name": "easy-react-router",
	"version": "1.0.0",
	"description": "File based router for React",
	"files": [
		"build"
	],
	"main": "build/src/router_src/index.js",
	"exports": {
		".": {
			"import": "./build/index.js",
			"require": "./build/index.js",
			"types": "./build/index.d.ts"
		},
		"./plugin": {
			"import": "./build/plugin/routerPlugin.js",
			"require": "./build/plugin/routerPlugin.js",
			"types": "./build/plugin/routerPlugin.d.ts"
		}
	},
	"type": "commonjs",
	"author": "Nicolas VENTER",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nicolasventer/Easy-React-Router.git"
	},
	"bugs": {
		"url": "https://github.com/nicolasventer/Easy-React-Router/issues"
	},
	"scripts": {
		"dev": "bun run _genClientEnv.ts && vite",
		"build": "cross-env B_PROD=true bun run _genClientEnv.ts && bun run _build.ts",
		"_build": "cross-env B_PROD=true bun run _genClientEnv.ts && tsc -b && vite build",
		"lint": "eslint .",
		"preview": "vite preview",
		"deploy": "bun run _deploy.ts",
		"buildDeploy": "bun run build && bun run deploy",
		"buildPkg": "cmd /c \"if exist build rmdir /s /q build\" && cd src/router_src && tsc && cp plugin/_gen*.ts ../../build/plugin && cp -R plugin/sample ../../build/plugin/sample"
	},
	"dependencies": {
		"@preact/signals": "2.0.0",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"vite-plugin-watch": "vite-plugin-watch-0.4.0.tgz"
	},
	"devDependencies": {
		"@eslint/js": "9.17.0",
		"@types/bun": "1.1.14",
		"@types/node": "22.10.2",
		"@types/react": "18.3.17",
		"@types/react-dom": "18.3.5",
		"@vitejs/plugin-react": "4.3.4",
		"cross-env": "7.0.3",
		"eslint": "9.17.0",
		"eslint-plugin-react-hooks": "5.0.0",
		"eslint-plugin-react-refresh": "0.4.16",
		"globals": "15.13.0",
		"typescript": "~5.6.2",
		"typescript-eslint": "8.18.1",
		"vite": "6.0.3"
	}
}
