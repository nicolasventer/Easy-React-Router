{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"rootDir": "./",
		"outDir": "../../build",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,

		/* Bundler mode */
		"isolatedModules": true,
		"moduleDetection": "force",
		"jsx": "react-jsx"
	},

	"exclude": ["./plugin/_gen*"]
}
